<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#00FFFFFF"
    tools:context=".presentation.homework.result.ResultClassmateFragment">

    <data>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:id="@+id/tv_friends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5명의 친구들이\n이 숙제를 제출했어요!"
            android:textSize="14sp"
            android:fontFamily="@font/nanumsquare_regular"
            android:textColor="@color/black"
            android:lineSpacingExtra="3dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="22dp"
            android:layout_marginStart="15dp"
            />
        
        <TextView
            android:id="@+id/tv_most"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가장 많이 틀린 문제 Top 3"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:fontFamily="@font/nanumsquare_bold"
            app:layout_constraintTop_toBottomOf="@id/tv_friends"
            app:layout_constraintStart_toStartOf="@id/tv_friends"
            android:layout_marginTop="25dp"
            />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/tv_most"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="18dp"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <View
                    android:id="@+id/div_1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#1A000000"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <TextView
                    android:id="@+id/tv_top1_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="top 1"
                    android:fontFamily="@font/nanumsquare_extrabold"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/div_1"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="13dp"
                    android:layout_marginStart="16dp"
                    />

                <TextView
                    android:id="@+id/tv_top1_index"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1번"
                    android:fontFamily="@font/nanumsquare_bold"
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toTopOf="@id/tv_top1_title"
                    app:layout_constraintBottom_toBottomOf="@id/tv_top1_title"
                    app:layout_constraintStart_toEndOf="@id/tv_top1_title"
                    android:layout_marginStart="18dp"
                    />

                <ImageView
                    android:id="@+id/iv_top1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_top1_title"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="13dp"
                    />

                <View
                    android:id="@+id/div_2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#1A000000"
                    android:layout_marginTop="13dp"
                    app:layout_constraintTop_toBottomOf="@id/iv_top1"
                    />

                <TextView
                    android:id="@+id/tv_top2_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="top 2"
                    android:fontFamily="@font/nanumsquare_extrabold"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/div_2"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="13dp"
                    android:layout_marginStart="16dp"
                    />

                <TextView
                    android:id="@+id/tv_top2_index"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2번"
                    android:fontFamily="@font/nanumsquare_bold"
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toTopOf="@id/tv_top2_title"
                    app:layout_constraintBottom_toBottomOf="@id/tv_top2_title"
                    app:layout_constraintStart_toEndOf="@id/tv_top2_title"
                    android:layout_marginStart="18dp"
                    />

                <ImageView
                    android:id="@+id/iv_top2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_top2_title"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="13dp"
                    />

                <View
                    android:id="@+id/div_3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#1A000000"
                    android:layout_marginTop="13dp"
                    app:layout_constraintTop_toBottomOf="@id/iv_top2"
                    />

                <TextView
                    android:id="@+id/tv_top3_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="top 3"
                    android:fontFamily="@font/nanumsquare_extrabold"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/div_3"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="13dp"
                    android:layout_marginStart="16dp"
                    />

                <TextView
                    android:id="@+id/tv_top3_index"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3번"
                    android:fontFamily="@font/nanumsquare_bold"
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toTopOf="@id/tv_top3_title"
                    app:layout_constraintBottom_toBottomOf="@id/tv_top3_title"
                    app:layout_constraintStart_toEndOf="@id/tv_top3_title"
                    android:layout_marginStart="18dp"
                    />

                <ImageView
                    android:id="@+id/iv_top3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_top3_title"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="13dp"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
