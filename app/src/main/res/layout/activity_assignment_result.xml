<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".presentation.assignment.result.HomeworkResultActivity">

    <data>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <View
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@color/appbar_background"
            app:layout_constraintTop_toTopOf="parent"
            />

        <LinearLayout
            android:id="@+id/ll_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:gravity="center"
            android:layout_marginStart="25dp"
            android:layout_marginTop="25dp"
            >

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/ic_arrow_left"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="숙제 화면으로"
                android:fontFamily="@font/nanumsquare_regular"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_marginStart="10dp"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="선생님의 숙제 공지 제목"
            android:textSize="18sp"
            android:fontFamily="@font/nanumsquare_bold"
            android:textColor="#683F21"
            app:layout_constraintTop_toBottomOf="@id/background"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="30dp"
            />

        <TextView
            android:id="@+id/tv_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2023-12-22 10:00"
            android:textSize="13sp"
            android:textColor="#7C7A7A"
            android:fontFamily="@font/nanumsquare_regular"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:layout_constraintStart_toStartOf="@id/tv_title"
            android:layout_marginTop="7dp"
            />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="22dp"
            android:layout_height="1dp"
            android:background="#1A000000"
            app:layout_constraintTop_toBottomOf="@id/tv_subtitle"
            />

        <LinearLayout
            android:id="@+id/ll_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider"
            android:layout_marginTop="20dp"
            >
            <TextView
                android:id="@+id/tv_count1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12개의 문제 중 "
                android:textSize="12sp"
                android:fontFamily="@font/nanumsquare_regular"
                android:textColor="#683F21"
                />
            <TextView
                android:id="@+id/tv_count2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5문제"
                android:textSize="12sp"
                android:fontFamily="@font/nanumsquare_bold"
                android:textColor="#683F21"
                />
            <TextView
                android:id="@+id/tv_count3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 오답"
                android:textSize="12sp"
                android:fontFamily="@font/nanumsquare_regular"
                android:textColor="#683F21"
                />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/ll_count"
            android:layout_marginTop="22dp"
            app:layout_constraintBottom_toTopOf="@id/fab"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <LinearLayout
                    android:id="@+id/ll_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginHorizontal="25dp"
                    android:background="@drawable/shape_rect0_stroke_tab"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_check"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@drawable/ic_radio_small_checked"
                        android:layout_gravity="center"
                        android:visibility="invisible"
                        android:layout_marginHorizontal="12dp"
                        />

                    <TextView
                        android:id="@+id/tv_index"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:text="문제 번호"
                        android:textColor="#683F21"
                        android:fontFamily="@font/nanumsquare_bold"
                        android:textSize="11sp"
                        android:textAlignment="center"
                        android:paddingVertical="10dp"
                        />

                    <TextView
                        android:id="@+id/tv_easy"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="쉬움"
                        android:textColor="#683F21"
                        android:fontFamily="@font/nanumsquare_bold"
                        android:textSize="11sp"
                        android:textAlignment="center"
                        android:gravity="center"
                        />

                    <TextView
                        android:id="@+id/tv_normal"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="보통"
                        android:textColor="#683F21"
                        android:fontFamily="@font/nanumsquare_bold"
                        android:textSize="11sp"
                        android:textAlignment="center"
                        android:gravity="center"
                        />

                    <TextView
                        android:id="@+id/tv_hard"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="어려움"
                        android:textColor="#683F21"
                        android:fontFamily="@font/nanumsquare_bold"
                        android:textSize="11sp"
                        android:textAlignment="center"
                        android:gravity="center"
                        />

                    <TextView
                        android:id="@+id/tv_unsolved"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="미풀이"
                        android:textColor="#683F21"
                        android:fontFamily="@font/nanumsquare_bold"
                        android:textSize="11sp"
                        android:textAlignment="center"
                        android:gravity="center"
                        />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_answer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/ll_title"
                    android:layout_marginHorizontal="25dp"
                    android:orientation="vertical"
                    android:overScrollMode="never"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:background="@drawable/shape_rect0_stroke_tab"
                    />

                <ImageView
                    android:id="@+id/iv_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_left"
                    app:layout_constraintEnd_toStartOf="@id/tv_count"
                    app:layout_constraintTop_toTopOf="@id/tv_count"
                    app:layout_constraintBottom_toBottomOf="@id/tv_count"
                    android:layout_marginEnd="20dp"
                    />

                <TextView
                    android:id="@+id/tv_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:text="12p"
                    android:textSize="16sp"
                    android:fontFamily="@font/nanumsquare_extrabold"
                    app:layout_constraintTop_toBottomOf="@id/rv_answer"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginVertical="30dp"
                    />

                <ImageView
                    android:id="@+id/iv_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_right"
                    app:layout_constraintStart_toEndOf="@id/tv_count"
                    app:layout_constraintTop_toTopOf="@id/tv_count"
                    app:layout_constraintBottom_toBottomOf="@id/tv_count"
                    android:layout_marginStart="20dp"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/fab"
            android:layout_width="200dp"
            android:layout_height="47dp"
            android:layout_gravity="end|bottom"
            android:layout_marginBottom="32dp"
            app:backgroundTint="#00FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/shape_rect30_fab"
            app:layout_constraintTop_toTopOf="@id/fab"
            app:layout_constraintBottom_toBottomOf="@id/fab"
            app:layout_constraintStart_toStartOf="@id/fab"
            app:layout_constraintEnd_toEndOf="@id/fab"
            android:elevation="6dp"
            />

        <TextView
            android:id="@+id/tv_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="해당 페이지 결과 수정하기"
            app:layout_constraintStart_toStartOf="@id/fab"
            app:layout_constraintEnd_toEndOf="@id/fab"
            app:layout_constraintTop_toTopOf="@id/fab"
            app:layout_constraintBottom_toBottomOf="@id/fab"
            android:elevation="7dp"
            android:textSize="16sp"
            android:fontFamily="@font/nanumsquare_regular"
            android:textColor="#683F21"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>