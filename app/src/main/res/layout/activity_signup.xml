<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".presentation.login.LoginActivity">

    <data>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toTopOf="parent"
            android:text="회원가입"
            android:fontFamily="@font/pretendard_semibold"
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="@color/black"
            />

        <ScrollView
            android:id="@+id/sv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginVertical="20dp"
            app:layout_constraintBottom_toTopOf="@id/tv_finish"
            app:layout_constraintTop_toBottomOf="@id/tv_signup"
            app:layout_constraintVertical_bias="0.0"
            tools:layout_editor_absoluteX="0dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="46dp"
                    android:fontFamily="@font/pretendard_regular"
                    android:text="아이디"
                    android:textColor="#828282"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/et_id"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginHorizontal="46dp"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/shape_rect4_fill_input"
                    android:fontFamily="@font/pretendard_regular"
                    android:paddingStart="16dp"
                    android:paddingVertical="12dp"
                    android:paddingEnd="82dp"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@id/tv_id" />

                <TextView
                    android:id="@+id/tv_check"
                    android:layout_width="70dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="46dp"
                    android:background="@drawable/shape_rect4_fill_button"
                    android:fontFamily="@font/pretendard_semibold"
                    android:gravity="center"
                    android:text="중복확인"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/et_id" />

                <TextView
                    android:id="@+id/tv_pw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="46dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/pretendard_regular"
                    android:text="비밀번호"
                    android:textColor="#828282"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/et_id" />

                <EditText
                    android:id="@+id/et_pw"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginHorizontal="46dp"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/shape_rect4_fill_input"
                    android:fontFamily="@font/pretendard_regular"
                    android:inputType="textPassword"
                    android:paddingVertical="12dp"
                    android:paddingHorizontal="16dp"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@id/tv_pw" />

                <TextView
                    android:id="@+id/tv_pw_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="46dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/pretendard_regular"
                    android:text="비밀번호 확인"
                    android:textColor="#828282"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/et_pw" />

                <EditText
                    android:id="@+id/et_pw_check"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginHorizontal="46dp"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/shape_rect4_fill_input"
                    android:fontFamily="@font/pretendard_regular"
                    android:inputType="textPassword"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="12dp"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@id/tv_pw_check" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="46dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/pretendard_regular"
                    android:text="이름"
                    android:textColor="#828282"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/et_pw_check" />

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginHorizontal="46dp"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/shape_rect4_fill_input"
                    android:fontFamily="@font/pretendard_regular"
                    android:inputType="textPassword"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="12dp"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@id/tv_name" />

                <TextView
                    android:id="@+id/tv_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="46dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/pretendard_regular"
                    android:text="전화번호"
                    android:textColor="#828282"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/et_name" />

                <EditText
                    android:id="@+id/et_number"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginHorizontal="46dp"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/shape_rect4_fill_input"
                    android:fontFamily="@font/pretendard_regular"
                    android:inputType="number"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="12dp"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@id/tv_number" />

                <TextView
                    android:id="@+id/tv_role"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="46dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/pretendard_regular"
                    android:text="가입자"
                    android:textColor="#828282"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/et_number" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_student"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    app:layout_constraintBottom_toBottomOf="@id/tv_role"
                    app:layout_constraintStart_toEndOf="@id/tv_role"
                    app:layout_constraintTop_toTopOf="@id/tv_role">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_student"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/ic_radio_checked"
                        android:checked="true"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_student"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/pretendard_medium"
                        android:text="학생"
                        android:textColor="#444444"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="@id/btn_student"
                        app:layout_constraintStart_toEndOf="@id/btn_student"
                        app:layout_constraintTop_toTopOf="@id/btn_student" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_teacher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    app:layout_constraintStart_toEndOf="@id/cl_student"
                    app:layout_constraintTop_toTopOf="@id/cl_student">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_teacher"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/ic_radio_selector"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_teacher"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/pretendard_medium"
                        android:text="선생님"
                        android:textColor="#444444"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="@id/btn_teacher"
                        app:layout_constraintStart_toEndOf="@id/btn_teacher"
                        app:layout_constraintTop_toTopOf="@id/btn_teacher" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/tv_advisor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="46dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/pretendard_regular"
                    android:text="선생님 아이디"
                    android:textColor="#828282"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cl_student" />

                <EditText
                    android:id="@+id/et_advisor"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginHorizontal="46dp"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/shape_rect4_fill_input"
                    android:fontFamily="@font/pretendard_regular"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="12dp"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@id/tv_advisor" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <TextView
            android:id="@+id/tv_finish"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="46dp"
            android:background="@drawable/shape_rect4_fill_button"
            android:textAlignment="center"
            android:gravity="center"
            android:text="회원가입"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/pretendard_medium"
            android:textSize="16sp"
            android:textColor="#444444"
            android:layout_marginBottom="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>