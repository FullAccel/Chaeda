<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="30dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/appbar_background"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:src="@drawable/ic_arrow_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_title"
        app:layout_constraintBottom_toBottomOf="@id/tv_title"
        android:layout_marginStart="25dp"
        />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="날짜 선택"
        android:fontFamily="@font/nanumsquare_bold"
        android:textColor="#683F21"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/background"
        android:layout_marginBottom="12dp"
        />

    <LinearLayout
        android:id="@+id/ll_np"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/background"
        android:paddingVertical="20dp"
        >
        <NumberPicker
            android:id="@+id/np_year"
            android:layout_width="70dp"
            android:layout_height="120dp"
            app:layout_constraintTop_toBottomOf="@id/background"
            android:layout_marginHorizontal="10dp"
            />
        <NumberPicker
            android:id="@+id/np_month"
            android:layout_width="70dp"
            android:layout_height="120dp"
            app:layout_constraintTop_toBottomOf="@id/background"
            android:layout_marginHorizontal="10dp"
            />
        <NumberPicker
            android:id="@+id/np_date"
            android:layout_width="70dp"
            android:layout_height="120dp"
            app:layout_constraintTop_toBottomOf="@id/background"
            android:layout_marginHorizontal="10dp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="취소"
        android:textAlignment="center"
        android:gravity="center"
        android:fontFamily="@font/nanumsquare_bold"
        android:textColor="#717171"
        android:background="@drawable/shape_rect4_stroke_grey"
        app:layout_constraintTop_toBottomOf="@id/ll_np"
        android:layout_margin="5dp"
        android:paddingHorizontal="40dp"
        android:paddingVertical="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_accept"
        />

    <TextView
        android:id="@+id/tv_accept"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="확인"
        android:textAlignment="center"
        android:gravity="center"
        android:fontFamily="@font/nanumsquare_bold"
        android:textColor="#683F21"
        android:background="@drawable/shape_rect4_fill_lightyellow"
        app:layout_constraintTop_toBottomOf="@id/ll_np"
        android:layout_margin="5dp"
        android:paddingHorizontal="40dp"
        android:paddingVertical="10dp"
        app:layout_constraintStart_toEndOf="@id/tv_cancel"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>