<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".presentation.notice.detail.NoticeDetailActivity">

    <data>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <View
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@color/appbar_background"
            app:layout_constraintTop_toTopOf="parent"
            />

        <LinearLayout
            android:id="@+id/ll_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:gravity="center"
            android:layout_marginStart="25dp"
            android:layout_marginTop="25dp"
            >

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/ic_arrow_left"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="공지 목록으로"
                android:fontFamily="@font/nanumsquare_regular"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_marginStart="10dp"
                />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_thumbnail"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/more_photo"
            app:cardCornerRadius="15dp">

            <ImageView
                android:id="@+id/iv_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/test_paper"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                />

        </androidx.cardview.widget.CardView>

        <View
            android:id="@+id/more_photo"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginEnd="25dp"
            android:layout_marginStart="10dp"
            android:paddingHorizontal="15dp"
            android:paddingVertical="20dp"
            android:background="@drawable/shape_rect15_fill_photo"
            app:layout_constraintStart_toEndOf="@id/cv_thumbnail"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/cv_thumbnail"
            />

        <TextView
            android:id="@+id/tv_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+1장"
            android:textSize="18sp"
            android:fontFamily="@font/nanumsquare_bold"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="@id/more_photo"
            app:layout_constraintBottom_toBottomOf="@id/more_photo"
            app:layout_constraintTop_toTopOf="@id/more_photo"
            app:layout_constraintEnd_toEndOf="@id/more_photo"
            />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="선생님의 일반 공지 제목"
            android:textSize="18sp"
            android:fontFamily="@font/nanumsquare_bold"
            android:textColor="#683F21"
            app:layout_constraintTop_toBottomOf="@id/more_photo"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="28dp"
            />

        <TextView
            android:id="@+id/tv_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2023-12-22 10:00"
            android:textSize="13sp"
            android:textColor="#7C7A7A"
            android:fontFamily="@font/nanumsquare_regular"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:layout_constraintStart_toStartOf="@id/tv_title"
            android:layout_marginTop="7dp"
            />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/tv_subtitle"
            app:layout_constraintBottom_toBottomOf="parent"
            android:overScrollMode="never"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="24dp"
            >
            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="선생님이 작성한 본문 내용이 여기에 표시됩니다."
                android:textSize="14sp"
                android:fontFamily="@font/nanumsquare_regular"
                android:textColor="#000000"
                app:layout_constraintTop_toBottomOf="@id/tv_subtitle"
                android:paddingBottom="90dp"
                />
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>