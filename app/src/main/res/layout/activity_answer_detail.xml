<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".presentation.homework.result.detail.AnswerDetailActivity">

    <data>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <View
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@color/appbar_background"
            app:layout_constraintTop_toTopOf="parent"
            />

        <LinearLayout
            android:id="@+id/ll_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:gravity="center"
            android:layout_marginStart="25dp"
            android:layout_marginTop="25dp"
            >

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/ic_arrow_left"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오답 목록으로"
                android:fontFamily="@font/nanumsquare_regular"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_marginStart="10dp"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/background"
            android:layout_marginTop="28dp"
            android:layout_marginHorizontal="25dp"
            android:background="@drawable/shape_rect0_stroke_tab"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="문제 번호"
                android:textColor="#683F21"
                android:fontFamily="@font/nanumsquare_bold"
                android:textSize="11sp"
                android:textAlignment="center"
                android:paddingVertical="10dp"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="작성한 답"
                android:textColor="#683F21"
                android:fontFamily="@font/nanumsquare_bold"
                android:textSize="11sp"
                android:textAlignment="center"
                android:gravity="center"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="정답"
                android:textColor="#683F21"
                android:fontFamily="@font/nanumsquare_bold"
                android:textSize="11sp"
                android:textAlignment="center"
                android:gravity="center"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="정답률"
                android:textColor="#683F21"
                android:fontFamily="@font/nanumsquare_bold"
                android:textSize="11sp"
                android:textAlignment="center"
                android:gravity="center"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_student_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/ll_title"
            android:layout_marginHorizontal="25dp"
            android:background="@drawable/shape_rect0_stroke_tab"
            >

            <TextView
                android:id="@+id/tv_index"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1"
                android:textColor="#683F21"
                android:fontFamily="@font/nanumsquare_bold"
                android:textSize="11sp"
                android:textAlignment="center"
                android:paddingVertical="10dp"
                />

            <TextView
                android:id="@+id/tv_written"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="2"
                android:textColor="#683F21"
                android:fontFamily="@font/nanumsquare_bold"
                android:textSize="11sp"
                android:textAlignment="center"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/tv_correct"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="3"
                android:textColor="#683F21"
                android:fontFamily="@font/nanumsquare_bold"
                android:textSize="11sp"
                android:textAlignment="center"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/tv_rate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="58%"
                android:textColor="#683F21"
                android:fontFamily="@font/nanumsquare_bold"
                android:textSize="11sp"
                android:textAlignment="center"
                android:gravity="center"
                />
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            app:layout_constraintTop_toBottomOf="@id/ll_student_title"
            android:background="@drawable/shape_rect0_stroke_tab"
            android:paddingVertical="28dp"
            android:paddingHorizontal="20dp"
            >
            <TextView
                android:id="@+id/tv_explanation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="해설"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:fontFamily="@font/nanumsquare_bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

            <ImageView
                android:id="@+id/iv_explanation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                app:layout_constraintTop_toBottomOf="@id/tv_explanation"
                />

            <TextView
                android:id="@+id/tv_student"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="본인 답지"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:fontFamily="@font/nanumsquare_bold"
                app:layout_constraintTop_toBottomOf="@id/iv_explanation"
                android:layout_marginTop="50dp"
                app:layout_constraintStart_toStartOf="parent"
                />

            <ImageView
                android:id="@+id/iv_student"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                app:layout_constraintTop_toBottomOf="@id/tv_student"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>