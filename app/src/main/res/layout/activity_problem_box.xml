<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".presentation.homework.result.detail.AnswerDetailActivity">

    <data>
        <variable
            name="vm"
            type="com.chaeda.chaeda.presentation.homework.add.AddAssignmentViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <View
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@color/appbar_background"
            app:layout_constraintTop_toTopOf="parent"
            />

        <LinearLayout
            android:id="@+id/ll_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:gravity="center"
            android:layout_marginStart="25dp"
            android:layout_marginTop="25dp"
            >

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/ic_arrow_left"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이전 화면으로"
                android:fontFamily="@font/nanumsquare_regular"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_marginStart="10dp"
                />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/background"
            app:layout_constraintBottom_toBottomOf="parent"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:paddingBottom="100dp"
                >

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="46dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/pretendard_regular"
                    android:text="틀린 날짜 입력"
                    android:textColor="#828282"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/et_date"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginHorizontal="46dp"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/shape_rect4_fill_input"
                    android:fontFamily="@font/pretendard_regular"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="12dp"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@id/tv_date" />

                <TextView
                    android:id="@+id/tv_photo"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginHorizontal="46dp"
                    android:background="@drawable/shape_rect4_fill_brown"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:text="문제 사진 불러오기"
                    app:layout_constraintTop_toBottomOf="@id/et_date"
                    android:layout_marginTop="33dp"
                    android:fontFamily="@font/pretendard_medium"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    />

                <TextView
                    android:id="@+id/tv_photo_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="46dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/pretendard_regular"
                    android:text="불러온 문제 사진"
                    android:textColor="#828282"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_photo" />

                <ImageView
                    android:id="@+id/iv_photo"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginHorizontal="46dp"
                    android:layout_marginTop="7dp"
                    android:background="@color/appbar_background"
                    app:layout_constraintTop_toBottomOf="@id/tv_photo_title"
                    />

                <TextView
                    android:id="@+id/tv_answer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="46dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/pretendard_regular"
                    android:text="정답 입력"
                    android:textColor="#828282"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/iv_photo" />

                <EditText
                    android:id="@+id/et_answer"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginHorizontal="46dp"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/shape_rect4_fill_input"
                    android:fontFamily="@font/pretendard_regular"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="12dp"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@id/tv_answer" />

                <TextView
                    android:id="@+id/tv_subject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="46dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/pretendard_regular"
                    android:text="교육과정 선택"
                    android:textColor="#828282"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/et_answer" />

                <TextView
                    android:id="@+id/et_subject"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginHorizontal="46dp"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/shape_rect4_fill_input"
                    android:fontFamily="@font/pretendard_regular"
                    android:paddingStart="16dp"
                    android:paddingVertical="12dp"
                    android:text=""
                    android:paddingEnd="32dp"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@id/tv_subject" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_down"
                    app:layout_constraintTop_toTopOf="@id/et_subject"
                    app:layout_constraintBottom_toBottomOf="@id/et_subject"
                    app:layout_constraintEnd_toEndOf="@id/et_subject"
                    android:layout_marginEnd="20dp"
                    />

                <TextView
                    android:id="@+id/tv_chapter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="46dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/pretendard_regular"
                    android:text="단원 선택"
                    android:textColor="#828282"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/et_subject" />

                <TextView
                    android:id="@+id/et_chapter"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginHorizontal="46dp"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/shape_rect4_fill_input"
                    android:fontFamily="@font/pretendard_regular"
                    android:paddingStart="16dp"
                    android:paddingVertical="12dp"
                    android:text=""
                    android:paddingEnd="32dp"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@id/tv_chapter" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_down"
                    app:layout_constraintTop_toTopOf="@id/et_chapter"
                    app:layout_constraintBottom_toBottomOf="@id/et_chapter"
                    app:layout_constraintEnd_toEndOf="@id/et_chapter"
                    android:layout_marginEnd="20dp"
                    />

                <TextView
                    android:id="@+id/tv_concept"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="46dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/pretendard_regular"
                    android:text="세부개념 선택"
                    android:textColor="#828282"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/et_chapter" />

                <TextView
                    android:id="@+id/et_concept"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginHorizontal="46dp"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/shape_rect4_fill_input"
                    android:fontFamily="@font/pretendard_regular"
                    android:paddingStart="16dp"
                    android:paddingVertical="12dp"
                    android:text=""
                    android:paddingEnd="32dp"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@id/tv_concept" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_down"
                    app:layout_constraintTop_toTopOf="@id/et_concept"
                    app:layout_constraintBottom_toBottomOf="@id/et_concept"
                    app:layout_constraintEnd_toEndOf="@id/et_concept"
                    android:layout_marginEnd="20dp"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>